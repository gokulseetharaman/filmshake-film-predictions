predictions.filmshake.co.uk {
  encode gzip zstd

  # API at /api/*
  handle_path /api/* {
    reverse_proxy backend:5000
  }

  # Static app at root /*
  handle_path /* {
    root * /srv/public
    try_files {path} {path}/ /index.html
    file_server
  }

  # Health
  @health {
    path /ok
  }
  respond @health "ok" 200
}
